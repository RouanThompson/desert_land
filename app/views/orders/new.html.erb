<!--New Order Form-->
<div class="form">
    <!--Show Validation Errors-->
    <% if @errors %>
        <% @errors.each do |error| %>
            <p style="color:red"><%= error %></p>
        <% end %>
    <% end %>

    <%= form_with model:@order do |f| %>
        <%= f.hidden_field :number, :value => Time.now %>
        <%Category.all.each do |category|%>
            <p class="category", style="color:pink;"><%= category.name %></p>
            <p><%= f.collection_check_boxes :item_ids, category.items, :id, :name %></p>
        <% end %>
        <%= f.submit "Create Order"%>
    <% end %> 
</div>
